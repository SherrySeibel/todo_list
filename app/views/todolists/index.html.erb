<%= link_to "Add a new todo", new_todolist_path %>

<ul class="todolists">
  <% @todolists.each do |todolist| %>
    <li class="<%= "completed" if todolist.completed? %>">
      <%= todolist.title %>
      <% if todolist.completed? %>
        <%= button_to "Mark incomplete", todolist_completion_path(todolist), method: :delete %>
      <% else %>
        <%= button_to "Mark complete", todolist_completion_path(todolist) %>
      <% end %>
    </li>
  <% end %>
</ul>
